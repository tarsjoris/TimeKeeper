<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <style name="button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_margin">2dp</item>
	    <item name="android:layout_gravity">fill_horizontal|fill_vertical</item>
	    <item name="android:adjustViewBounds">false</item>
	    <item name="android:cropToPadding">true</item>
	    <item name="android:padding">0dp</item>
	    <item name="android:background">@drawable/button_selector</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="playlist_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:padding">10dp</item>
		<item name="android:background">@drawable/entry_selector</item>
		<item name="android:textColor">@color/entry_selector</item>
	</style>
	
    <style name="playlist_entry_name">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_margin">10dp</item>
		<item name="android:duplicateParentState">true</item>
		<item name="android:textColor">@color/entry_selector</item>
	</style>
	
    <style name="playlist_entry_tempo">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_margin">10dp</item>
		<item name="android:duplicateParentState">true</item>
		<item name="android:textColor">@color/entry_selector</item>
	</style>
</resources>
