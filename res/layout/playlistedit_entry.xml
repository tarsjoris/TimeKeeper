<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/entry_selector"
    >
    
	<TextView
        android:id="@+id/playlistedit_entry_name"
        style="@style/playlistedit_entry_name"
        />
    <TextView
        android:id="@+id/playlistedit_entry_tempo"
        style="@style/playlistedit_entry_tempo"
        />
	<ImageButton
        android:id="@+id/playlistedit_entry_delete"
        style="@style/playlistedit_entry_button"
        android:background="@drawable/ic_action_discard"
        android:contentDescription="@string/playlistedit_entry_remove"
        />
    <ImageButton
        android:id="@+id/playlistedit_entry_up"
        style="@style/playlistedit_entry_button"
        android:background="@drawable/ic_action_collapse"
        android:contentDescription="@string/playlistedit_entry_up"
        />
    <ImageButton
        android:id="@+id/playlistedit_entry_down"
        style="@style/playlistedit_entry_button"
        android:background="@drawable/ic_action_expand"
        android:contentDescription="@string/playlistedit_entry_down"
        />
</LinearLayout>
