<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sections_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:visibility="invisible">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

    <android.widget.LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <android.widget.LinearLayout
            android:background="@drawable/panel_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:padding="5dp"
            android:orientation="vertical">

            <android.widget.ListView
                android:choiceMode="multipleChoiceModal"
                android:id="@+id/sections_list"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent" />

            <android.widget.LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <android.widget.Button
                    style="@style/button"
                    android:id="@+id/sections_close"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@string/close" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:contentDescription="@string/playlistedit_action_addsection"
                    android:id="@+id/fab_add_section"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:title="@string/playlistedit_action_addsection"
                    app:srcCompat="@drawable/ic_plus" />

            </android.widget.LinearLayout>

        </android.widget.LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

    </android.widget.LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

</android.widget.LinearLayout>